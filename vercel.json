{
  "version": 2,
  "builds": [
    {
      "src": "src/main.rs",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "target/release"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "src/main.rs": {
      "runtime": "rust"
    }
  },
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "RUST_LOG": "info"
  }
}
